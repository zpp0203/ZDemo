<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--圆环进度条-->
    <declare-styleable name="SuperCircleView">
        <!-- 圆环的宽度 -->
        <attr name="ring_width" format="dimension"/>
        <!-- 内圆的颜色 -->
        <attr name="circle_color" format="color"/>
        <!-- 圆环的默认颜色 -->
        <attr name="ring_normal_color" format="color"/>
        <!-- 圆环要显示的彩色的区域(随着数值的改变,显示不同大小的彩色区域)-->
        <attr name="ring_progress" format="integer"/>
        <!-- 绘制内容的数值 -->
        <attr name="maxValue" format="integer" />

        <attr name="textIsShow"/>
        <attr name="textSize"/>
        <attr name="textColor"/>
        <attr name="text" format="string" />
    </declare-styleable>
    
    <!--圆形信息板-->
    <declare-styleable name="CircleMessageView">
        <!--圆形半径-->
        <attr name="circleRadio" format="dimension"/>
        <!-- 圆的颜色 -->
        <attr name="circleColor" format="color"/>

        <attr name="topTextSize" format="dimension" />
        <attr name="topTextColor" format="color" />
        <attr name="topText" format="string" />
        <attr name="lineColor" format="color"/>
        <attr name="lineWidth" format="dimension"/>
        <attr name="bottomTextSize" format="dimension" />
        <attr name="bottomTextColor" format="color" />
        <attr name="bottomText" format="string" />

    </declare-styleable>

    <declare-styleable name="CustomInputView">
        <attr name="dividerWidth" format="dimension"/>
        <attr name="itemWidth" format="dimension"/>
        <attr name="itemBackgroundColor" format="color"/>
        <attr name="itemNumber" format="integer"/>
        <attr name="itemLength" format="integer"/>

        <attr name="textColor"/>
        <attr name="textIsShow" />
        <attr name="textSize"/>

    </declare-styleable>

    <attr name="textIsShow" format="boolean" />
    <attr name="textColor" format="color"/>
    <attr name="textSize" format="dimension" />
</resources>
